{
  "manifest_version": 2,
  "name": "URL Fetcher",
  "version": "1.0",
  "description": "Fetches the current URL and displays it in a popup and console.",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "URL Fetcher"
  }
}
